<div class="center hero-unit">
  <h2>On
    <%= @transaction.created_at.strftime("%d/%m/%Y") %>
    <%= @transaction.name %>
    <% if @transaction.status == true %>
      CHECKED-IN
    <% else %>
      CHECKED-OUT
    <% end %>
    <%= @transaction.description %>
    (<%= @transaction.assettag %>)
  </h2>

</div>
