<h1><%= @employee.name %></h1>
<h4 style="padding-left:20px">
  <b>Phone:</b>
  <%= @employee.phone %>
</h4>

<br />

<% if @employee.transactions.exists?(:status => false) %>
  <h3>Currently Checked-OUT Items</h3>
  <table>
    <tr>
      <th>Item ID</th>
      <th style="padding-left:30px">Asset Tag</th>
    </tr>
    <% @employee.transactions.each do |transaction| %>
      <% if transaction.status == false %>
        <tr>
          <td><%= transaction.description %></td>
          <td style="padding-left:30px"><%= transaction.assettag %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
<% end %>

<br /><br />

<% if @employee.transactions.count != 0 %>
  <h3>Check-IN / Check-OUT History</h3>
    <table>
      <tr>
        <th>Description</th>
        <th style="padding-left:30px">Item ID</th>
        <th style="padding-left:30px">Asset Tag</th>
        <th style="padding-left:30px">Created At</th>
        <th style="padding-left:30px">Status</th>
      </tr>
      <% @employee.transactions.reverse_each do |transaction| %>
        <tr>
          <td><%= transaction.description %></td>
          <td style="padding-left:30px"><%= transaction.item_id %></td>
          <td style="padding-left:30px"><%= transaction.assettag %></td>
          <td style="padding-left:30px"><%= transaction.created_at.strftime("%A, %m/%d/%Y") %>
          <td style="padding-left:30px"><%= transaction.status %></td>
        </tr>
      <% end %>
    </table>
  <% end %>

  <br>

<%= link_to 'Edit This Employee', edit_employee_path(@employee) %> |
<%= link_to 'Back', employees_path %>
