<h1>Employee Roster</h1>

<table>
  <tr>
    <th style="padding-left:30px">Name</th>
    <th style="padding-left:30px">Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td style="padding-left:30px"><%= link_to employee.name, employee %></td>
    <td style="padding-left:30px"><%= employee.phone %></td>
    <td style="padding-left:30px"><%= link_to 'Edit', edit_employee_path(employee) %></td>
    <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

